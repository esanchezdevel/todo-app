<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.todo.todoapp.application.components.*?>

<!-- new category form -->
<AnchorPane fx:id="newCategoryFormPane" 
            style="-fx-background-color: white;" 
            xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.todo.todoapp.controller.NewCategoryFormViewController">

    <Label fx:id="titleLabel" text="" style="-fx-font-size: 20;" AnchorPane.topAnchor="40.0" AnchorPane.leftAnchor="40.0" />

    <Separator prefWidth="700" orientation="HORIZONTAL" AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="20.0"/>

    <Label fx:id="newCategoryTitleLabel" text="" style="-fx-font-size: 20; -fx-font-weight: bold;" AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="40.0" />
    
    <Label fx:id="nameLabel" text="" style="-fx-font-size: 15px;" AnchorPane.TopAnchor="140.0" AnchorPane.leftAnchor="40.0"/>
    <TextField fx:id="nameField" AnchorPane.TopAnchor="140.0" AnchorPane.leftAnchor="160.0"/>

    <CustomButton fx:id="submitButton" text="Submit" onAction="#createCategory" AnchorPane.TopAnchor="180.0" AnchorPane.leftAnchor="40.0"/>

</AnchorPane>